{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: Debug (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cub3d", // Replace with your executable name
            "args": ["../maps/invalid/array_of_ones.cub"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Ensure this matches the label in tasks.json
            "miDebuggerPath": "/usr/bin/gdb" // Adjust if necessary
        }
    ]
}

